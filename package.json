{
  "name": "vinyl-music-player",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bun run tsc -b && bunx --bun vite build",
    "lint": "bunx eslint .",
    "preview": "bunx --bun vite preview --host",
    "serve": "bunx serve -s dist -l 3000",
    "typecheck": "bun run tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "electron:dev": "concurrently -k \"bun run dev\" \"wait-on http://localhost:5173 && electron . --no-sandbox\"",
    "electron:build": "ELECTRON=true bun run build && electron-builder",
    "electron:pack": "ELECTRON=true bun run build && electron-builder --dir"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tanstack/react-virtual": "^3.13.18",
    "chokidar": "^5.0.0",
    "cmdk": "^1.1.1",
    "electron-store": "^11.0.2",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "music-metadata": "^11.10.5",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "react-tooltip": "^5.30.0"
  },
  "build": {
    "appId": "com.vinyl.musicplayer",
    "productName": "Vinyl Music Player",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules",
      "node_modules/electron-store/**/*"
    ],
    "extraResources": [
      {
        "from": "public/icons",
        "to": "icons"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "icon": "public/icons"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music",
      "icon": "public/icons/icon.svg"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icons/icon.svg"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  }
}

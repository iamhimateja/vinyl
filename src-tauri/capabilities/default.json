{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Vinyl Music Player default capabilities",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-set-title",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$AUDIO/**",
        "$HOME/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$DESKTOP/**",
        "**"
      ]
    },
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load"
  ]
}

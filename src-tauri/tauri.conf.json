{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Vinyl Music Player",
  "version": "1.0.0",
  "identifier": "com.vinyl.musicplayer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vinyl Music Player",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**",
            "$HOME/**",
            "$DOWNLOAD/**",
            "$AUDIO/**",
            "$DOCUMENT/**",
            "/home/**",
            "/tmp/**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Music",
    "shortDescription": "A beautiful music player with vinyl aesthetics",
    "longDescription": "Vinyl Music Player is a modern music player with a beautiful vinyl-inspired interface. Features include equalizer, playlists, favorites, and a music generator."
  }
}
